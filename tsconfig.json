{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@gsa-sam/components": [
        "dist/libs/components",
        "libs/packages/components/src/index.ts"
      ],
      "@gsa-sam/layouts": [
        "dist/libs/layouts",
        "libs/packages/layouts/src/index.ts"
      ],
      "@gsa-sam/sam-formly": [
        "dist/libs/sam-formly",
        "libs/packages/sam-formly/src/index.ts"
      ],
      "@gsa-sam/sam-material-extensions": [
        "dist/libs/sam-material-extensions",
        "libs/packages/sam-material-extensions/src/index.ts"
      ],
      "@gsa-sam/experimental": [
        "libs/packages/experimental/src/index.ts"
      ],
      "@gsa-sam/documentation": [
        "libs/documentation/src/index.ts"
      ]
    },
    "rootDir": "."
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}